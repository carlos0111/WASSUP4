


def is_odd(number):
    if number%2==1 :   # 2로 나누었을 때 나머지가 1이면 홀수이다.
        return True
    else:
        return False





def avg_numbers(*args):
    result = 0
    for i in args:
        result += i
    return result/len(args)

avg_numbers(1,2)       # 1.5 출력
avg_numbers(1,2,3,4,5) # 3.0 출력





