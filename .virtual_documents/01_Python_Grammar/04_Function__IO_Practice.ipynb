f = open('test.txt','w')
f.write("Life is too short\nyou need java")

f = open('test.txt', 'r')
body = f.readlines() # test.txt 파일의 내용을 body 변수에 저장
f.close()
body = [l.replace("java","python") for l in  body]  # body 문자열에서 "java"를 "python"으로 변경
f = open('test.txt', "w")  # 파일을 쓰기 모드로 다시 실행
for k in body :
    f.write(k)
f.close()






